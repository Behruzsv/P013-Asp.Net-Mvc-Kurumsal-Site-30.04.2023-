@model Product

<div class="col mb-5">
    <div class="card h-100">
        <!-- Product image-->
        <a asp-action="Detail" asp-controller="Products" asp-route-id="@Model.Id">
            <img class="card-img-top" src="/Image/@Model.Image" alt="@Model.Name">
        </a>

        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">@Model.Name</h5>
                <!-- Product price-->
                @Model.Price ₺
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="Detail" asp-controller="Products" asp-route-id="@Model.Id">İncele</a></div>
        </div>
    </div>
</div>
